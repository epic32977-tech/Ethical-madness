    <script>
        // Language toggle functionality
        const btnEn = document.getElementById('btn-en');
        const btnEs = document.getElementById('btn-es');
        const contentEn = document.getElementById('content-en');
        const contentEs = document.getElementById('content-es');
        
        btnEn.addEventListener('click', () => {
            btnEn.classList.add('active');
            btnEs.classList.remove('active');
            contentEn.classList.remove('hidden');
            contentEs.classList.add('hidden');
            
            // Show English text elements
            document.querySelectorAll('.en').forEach(el => el.classList.remove('hidden'));
            document.querySelectorAll('.es').forEach(el => el.classList.add('hidden'));
            
            // Update body accent color
            document.documentElement.style.setProperty('--accent', 'var(--en-accent)');
        });
        
        btnEs.addEventListener('click', () => {
            btnEs.classList.add('active');
            btnEn.classList.remove('active');
            contentEs.classList.remove('hidden');
            contentEn.classList.add('hidden');
            
            // Show Spanish text elements
            document.querySelectorAll('.es').forEach(el => el.classList.remove('hidden'));
            document.querySelectorAll('.en').forEach(el => el.classList.add('hidden'));
            
            // Update body accent color
            document.documentElement.style.setProperty('--accent', 'var(--es-accent)');
        });
        
        // Copy code functionality
        function copyCode(button) {
            const codeBlock = button.closest('.code-block');
            const codeText = codeBlock.innerText.replace('Copy', '').replace('Copiar', '');
            
            navigator.clipboard.writeText(codeText).then(() => {
                const originalText = button.textContent;
                button.textContent = btnEn.classList.contains('active') ? 'Copied!' : '¡Copiado!';
                button.style.backgroundColor = '#4CAF50';
                button.style.color = 'white';
                
                setTimeout(() => {
                    button.textContent = originalText;
                    button.style.backgroundColor = '';
                    button.style.color = '';
                }, 2000);
            });
        }
        
        // Clap button functionality
        function toggleClap(button) {
            const clapCount = button.querySelector('span');
            let count = parseInt(clapCount.textContent);
            const icon = button.querySelector('i');
            
            if (button.classList.contains('clapped')) {
                count--;
                button.classList.remove('clapped');
                icon.classList.remove('fas');
                icon.classList.add('far');
            } else {
                count++;
                button.classList.add('clapped');
                icon.classList.remove('far');
                icon.classList.add('fas');
            }
            
            // Update both language spans
            document.querySelectorAll('.action-btn span').forEach(span => {
                span.textContent = count;
            });
            
            // Add animation
            button.style.transform = 'scale(1.2)';
            setTimeout(() => {
                button.style.transform = 'scale(1)';
            }, 200);
        }
        
        // Template request
        function requestTemplate() {
            const offerSections = document.querySelectorAll('.template-offer');
            const isEnglish = btnEn.classList.contains('active');
            
            offerSections.forEach(offerSection => {
                const button = offerSection.querySelector('.template-btn');
                
                button.textContent = isEnglish ? 'Generating Template...' : 'Generando Plantilla...';
                button.disabled = true;
                
                setTimeout(() => {
                    offerSection.innerHTML = isEnglish ? 
                        `<h3>Template Generated!</h3>
                         <p>Your robust batch file writer template is ready. Key features include:</p>
                         <ul style="text-align: left; margin: 20px 0; padding-left: 20px;">
                             <li>Preserves comments and formatting</li>
                             <li>Creates backups before modification</li>
                             <li>Handles special characters correctly</li>
                             <li>Supports adding new key-value pairs</li>
                         </ul>
                         <button class="template-btn" onclick="downloadTemplate()">Download Template</button>` :
                        `<h3>¡Plantilla Generada!</h3>
                         <p>Tu plantilla robusta de escritura de archivos batch está lista. Características clave incluyen:</p>
                         <ul style="text-align: left; margin: 20px 0; padding-left: 20px;">
                             <li>Preserva comentarios y formato</li>
                             <li>Crea copias de seguridad antes de modificar</li>
                             <li>Maneja caracteres especiales correctamente</li>
                             <li>Soporta agregar nuevos pares clave-valor</li>
                         </ul>
                         <button class="template-btn" onclick="downloadTemplate()">Descargar Plantilla</button>`;
                }, 1500);
            });
        }
        
        function downloadTemplate() {
            const isEnglish = btnEn.classList.contains('active');
            alert(isEnglish ? 
                'In a real implementation, this would download a .bat file template. For now, check the code block above for the implementation!' :
                'En una implementación real, esto descargaría una plantilla de archivo .bat. Por ahora, ¡revisa el bloque de código anterior para la implementación!');
        }
        
        // Animate pipeline steps on scroll
        function animateOnScroll() {
            const steps = document.querySelectorAll('.pipeline-step');
            
            steps.forEach((step, index) => {
                const rect = step.getBoundingClientRect();
                const isVisible = (rect.top <= window.innerHeight * 0.8);
                
                if (isVisible) {
                    setTimeout(() => {
                        step.style.opacity = '1';
                        step.style.transform = 'translateX(0)';
                    }, index * 200);
                }
            });
        }
        
        // Initialize animation states
        document.addEventListener('DOMContentLoaded', () => {
            const steps = document.querySelectorAll('.pipeline-step');
            steps.forEach(step => {
                step.style.opacity = '0';
                step.style.transform = 'translateX(-20px)';
                step.style.transition = 'opacity 0.5s, transform 0.5s';
            });
            
            window.addEventListener('scroll', animateOnScroll);
            animateOnScroll(); // Run once on load
        });
    </script>
</body>
